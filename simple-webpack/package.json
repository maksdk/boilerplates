{
    "name": "webpack",
    "version": "1.0.0",
    "description": "simple boilerplate of webpack",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maksdk/boilerplates.git"
    },
    "keywords": [
        "webpack"
    ],
    "author": "Maksym Havryshchenko",
